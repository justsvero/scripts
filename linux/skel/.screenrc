caption always "%{kB}%?%-Lw%?%{bw}%n*%f %t%?(%u)%?%{kB}%?%+Lw%?"
hardstatus alwayslastline "%{BW}%16=%l %{BW}%50=%m/%d/%Y %{BW}%80=%c%="

autodetach on # Autodetach session on hangup instead of terminating screen completely
startup_message off # Turn off the splash screen
defscrollback 30000 # Use a 30000-line scrollback buffer

vbell off # turn off visual bell

defutf8 on # UTF-8 is on by default
deflogin on

# Redefine escape key
escape ^Bb

# Start window numbers with 1
bind c screen 1
bind ^c screen 1
bind 0 select 10
screen 1

#defshell -/bin/bash # Default shell is bash (login mode)
defshell /bin/bash
